server {
  listen <%= node[:nginx][:port] %>;

  <% if node[:nginx][:server_name] %>
  server_name <%= node[:nginx][:server_name].join(" ") %>;
  <% end %>

  access_log <%= node[:nginx][:install_dir] %>/logs/default.access.log main;
  error_log <%= node[:nginx][:install_dir] %>/logs/default.error.log;

  root <%= node[:nginx][:default_www_dir] %>;

  location / {
    root <%= node[:nginx][:default_www_dir] %>;
  }
}
